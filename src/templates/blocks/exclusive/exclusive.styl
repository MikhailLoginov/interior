.exclusive
  display flex
  justify-content space-between
  margin-top 50px
  .large-product
    h3
      color #1e88e5
      margin-bottom 18px
      text-transform uppercase
      margin 228px 0 0 51px
    h2
      margin 0 0 24px 51px
    h5
      margin-left 51px
      width 300px
    width 570px
    height 570px
    background url("/assets/images/product-1-lg.jpg") no-repeat
  &__small-products
    display flex
    flex-wrap wrap

.product
  width 270px
  height 270px
  &.product-1
    background url("/assets/images/product-2-sm.jpg") no-repeat
  &.product-2
    background url("/assets/images/product-3-sm.jpg") no-repeat
  &.product-3
    background url("/assets/images/product-4-sm.jpg") no-repeat
  &.product-4
    background url("/assets/images/product-5-sm.jpg") no-repeat
