footer
  background-color #f7f7f7

.footer
  padding 116px 96px 20px 99px

.content
  display flex
  h3
    color #6c6c6c
    text-transform uppercase
  a
    text-transform uppercase
  p
    color #212121
    font-size 14px
    font-weight 300
    line-height 22px
    margin 14px 0 22px 0
  &__contacts
    margin 0 80px 0 0
    p
      width 220px
  &__info
    margin-right 15px
  &__links
    margin-top 17px
    display flex
    a
      margin-bottom 8px
  &__col-1
    display flex
    flex-direction column
    width 184px
    margin-right 50px
  &__col-2
    display flex
    flex-direction column
    width 200px
    margin-right 50px
  &__stay-in-touch
    p
      width 380px
    input
      width 338px
      background-color #ffffff
      padding 16px 18px 16px 19px
      border 1px solid rgb(217, 222, 225)
      color #6c6c6c
      font-weight 300
      font-size 14px
      letter-spacing 0.55px
  
.bot-panel
  margin-top 49px
  display flex
  justify-content space-between
  letter-spacing 0.36px
  color #6c6c6c
  font-size 12px
  font-weight 700
  a
    letter-spacing 0.36px
    color #6c6c6c
    font-size 12px
    font-weight 700
  &__links
    cursor pointer
    background url("/assets/images/social-links.png")
    width 129px
    height 28px
    margin -7px 0 0 -19px