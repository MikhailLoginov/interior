.hero
  position relative
  background-image url('/assets/images/slider-img.jpg')
  height 800px
  &__content
    display flex
    flex-direction column
    padding 373px 0 0 98px
    width 458px
    h1, h3
      text-transform uppercase
    h1
      letter-spacing -3px
      margin-top 22px
    h5
      margin-top 34px
  &__navi
    // z-index 1
    position absolute
    bottom 19px
    left calc(50% - 60px)
    display flex
    align-items center
    justify-content center
    cursor pointer
.btn-order
  cursor pointer
  margin-top 32px
  box-shadow 0px 2px 4.85px 0.15px rgba(33, 33, 33, 0.35)
  background-color #ffffff
  width 181px
  height 45px
  line-height 45px
  color  #212121
  font-size 18px
  font-weight 700
  padding-left 31px
  text-align left
  border-radius 22px
  text-transform uppercase
  letter-spacing 3px
  background url(/assets/images/arrow.png) no-repeat 173px 16px

.icon-navi
  width 52px
  height 52px
  &:first-child
    width 40px
    height 40px
  &:last-child
    margin-left -3px
    width 40px
    height 40px