.exclusive
  margin 118px 0 0 98px

  &__small-products
    display flex
    flex-wrap wrap
    padding-left 15px

  .product
    width 270px
    height 270px
    margin 0 15px 30px 15px
    &.product-1
      background url("/assets/images/product-2-sm.jpg") no-repeat
    &.product-2
      background url("/assets/images/product-3-sm.jpg") no-repeat
    &.product-3
      background url("/assets/images/product-4-sm.jpg") no-repeat
    &.product-4
      background url("/assets/images/product-5-sm.jpg") no-repeat

.medium-product
  float left
  width 570px
  height 570px
  background url("/assets/images/product-1-lg.jpg") no-repeat
  h3
    color #1e88e5
    text-transform uppercase
    padding 183px 0 6px 30px
  h2
    padding 0 0 9px 30px
  h5
    padding 0 0 0 30px
    width 350px
  .btn-order
    margin-left 30px

