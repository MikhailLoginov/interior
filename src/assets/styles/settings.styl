body
  font-family Montserrat, sans-serif

.svg-sprite
  display none

.container
  max-width 1366px
  margin 0 auto

h1
  color #212121
  font-size 62px
  font-weight 100
  letter-spacing -5px
  word-spacing 15px

h2
  color #212121
  font-size 36px
  font-weight 700
  letter-spacing -1.3px
  +below(768px)
    font-size 24px
  +below(500px)
    font-size 18px

h3
  color #43a047
  font-size 18px
  font-weight 700
  letter-spacing 1.25px

h4
  color #6c6c6c
  font-weight 300
  font-size 22px
  letter-spacing -0.3px

h5
  color #6c6c6c
  font-size 14px
  font-weight 500
  line-height 24px
  letter-spacing -0.35px

a
  text-decoration none
  color #212121
  font-weight 700
  font-size 14px
  letter-spacing 0.25px
  transition all .25s
  &:hover
    color rgb(108, 108, 108)
  &:active
    color rgb(217, 222, 225) 

p
  letter-spacing -0.15px

.btn-order
  cursor pointer
  margin 30px 0 0 0
  box-shadow 0px 2px 4.85px 0.15px rgba(33, 33, 33, 0.35)
  background-color #ffffff
  width 181px
  height 45px
  line-height 45px
  color  #212121
  font-size 18px
  font-weight 700
  padding-left 31px
  text-align left
  border-radius 22px
  text-transform uppercase
  letter-spacing 3.8px
  background url(/assets/images/arrow.png) no-repeat 173px 16px
  transition all .25s
  &:hover
    background-color rgb(217, 222, 225)
  &:active
    color rgb(108, 108, 108)

.btn-explore
  cursor pointer
  font-size 18px
  font-weight 700
  width 235px
  height 45px
  margin 11px 0 0 0
  letter-spacing 3.5px
  text-transform uppercase
  background-color transparent 
  background url("/assets/images/arrow.png") no-repeat 205px 15px
  transition all .25s
  &:hover
    color rgb(108, 108, 108)
  &:active
    color rgb(217, 222, 225)
  +below(500px)
    font-size 10px
    letter-spacing 1.5px
    width 140px
    margin -10px 0 0 0 !important

.email-input
  position relative
  width 295px
  height 48px
  +below(500px)
    width 200px
  input
    padding 0 53px 0 19px
    width 100%
    height 100%
    background-color #ffffff
    border 1px solid rgb(217, 222, 225)
    color #6c6c6c
    font-weight 300
    font-size 14px
    letter-spacing 0.55px
  &__btn-submit
    cursor pointer
    background url("/assets/images/submit.png") no-repeat center
    width 45px
    height 100%
    position absolute
    bottom 0
    right -75px
    transition all .5s
    &:hover
      transform scale(1.1, 1.1)
  